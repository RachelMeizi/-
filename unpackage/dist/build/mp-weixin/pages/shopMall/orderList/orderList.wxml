<view><view class="topTabBar" style="{{'position:'+(headerPosition)+';'+('top:'+(headerTop)+';')}}"><block wx:for="{{orderType}}" wx:for-item="grid" wx:for-index="tbIndex" wx:key="tbIndex"><view data-event-opts="{{[['tap',[['showType',[tbIndex]]]]]}}" class="grid" bindtap="__e"><view class="{{['text',tbIndex==tabbarIndex?'on':'']}}">{{grid}}</view></view></block></view><view class="order-list"><view class="list"><block wx:if="{{list.length==0}}"><view class="onorder"><image src="../../../static/img/noorder.png"></image><view class="text">没有相关订单</view></view></block><block wx:for="{{list}}" wx:for-item="row" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['onDetail',['$0'],[[['list','',index]]]]]]]}}" class="row" bindtap="__e"><block wx:if="{{tabbarIndex==0}}"><view class="type">{{typeText.unpaid}}</view></block><block wx:if="{{tabbarIndex==1}}"><view class="type">{{typeText.unreceived}}</view></block><block wx:if="{{tabbarIndex==3}}"><view class="type">{{typeText.completed}}</view></block><block wx:for="{{row.goods}}" wx:for-item="item" wx:for-index="__i0__"><view class="order-info"><view class="left"><image src="{{item.img}}"></image></view><view class="right"><view class="name">{{''+item.name+''}}</view><view class="spec">{{"规格:"+item.spec+''}}<block wx:if="{{item.disRate!=1}}"><text class="disRate">{{item.disRate*10+"折"}}</text></block></view><view class="spec red" style="color:red;">{{"优惠金额: -￥"+item.disRatePrice}}</view><view class="price-number">￥<view class="price">{{item.price}}</view>x<view class="number">{{item.numner}}</view></view></view></view></block><view class="detail"><view class="number">{{"共"+row.numner+"件商品"}}</view><view class="sum">合计￥<view class="price">{{row.payment}}</view></view><view class="nominal">{{"(含运费 ￥"+row.freight+")"}}</view></view><view class="btns"><block wx:if="{{tabbarIndex==0}}"><block><view class="default">取消订单</view><view class="pay">付款</view></block></block><block wx:if="{{tabbarIndex==1}}"><block><view class="pay">确认收货</view></block></block><block wx:if="{{tabbarIndex==2}}"><block><view data-event-opts="{{[['tap',[['onComment',['$0'],[[['list','',index]]]]]]]}}" class="default" catchtap="__e">评价</view><view class="default">再次购买</view></block></block><block wx:if="{{tabbarIndex==3}}"><block><view class="default">再次购买</view></block></block></view></view></block></view></view></view>